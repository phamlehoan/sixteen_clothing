<!-- Page Content -->
<div class="page-heading products-heading header-text js-fullheight">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="text-content">
          <h4><%= t "headers.register"%></h4>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-12">
        <div class="login-wrap p-0">
          <%= form_for @user, url: users_path do |f| %>
            <div class="signin-form">
              <div id="register-form-1" class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                  <div class="form-group">
                    <%= f.email_field :email, class: "form-control", placeholder: "#{t("login.username")}" %>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password, class: "form-control", placeholder: "#{t("login.passwd")}" %>
                    <span class="toggle-password" toggle="#user_password"><i class="eye-pic fa fa-fw fa-eye field-icon"></i></span>
                  </div>
                  <div class="form-group">
                    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "#{t("login.new_passwd")}" %>
                    <span class="toggle-password" toggle="#user_password_confirmation"><i class="eye-pic fa fa-fw fa-eye field-icon"></i></span>
                  </div>
                  <div class="form-group">
                    <span id="btn-register-next" class="form-control btn btn-primary"><%= t "register.btn_next" %></span>
                  </div>
                </div>
              </div>
              <div id="register-form-2" class="d-none">
                <div class="row">
                  <div class="col-12 text-center">
                    <%= f.label :avatar do%>
                      <%= f.file_field :avatar, accept:"image/*", class:"d-none" %>
                      <%= image_tag "avatars/user-avt.png", id:"output_image", class:"img-avt" %>
                    <% end %>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.text_field :full_name, class: "form-control", placeholder: "#{t("register.full_name")}" %>
                    </div>
                    <div class="form-group">
                      <%= f.select :role, [["Admin"], ["Actor"]], {}, class: "form-control" %>
                    </div>
                  </div>
                  <div class="col-md-6">
                    <div class="form-group">
                      <%= f.text_field :phone_number, class: "form-control", placeholder: "#{t("register.phone")}" %>
                    </div>
                    <div class="form-group">
                      <%= f.date_field :date_of_birth, class: "form-control" %>
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-md-12">
                    <div class="form-group">
                      <%= f.text_field :address, class: "form-control", placeholder: "#{t("register.address")}" %>
                    </div>
                  </div>
                </div>
                <div class="form-group row">
                  <span id="btn-register-prev" class="form-control btn btn-white col-5 mx-auto"><%= t "register.btn_prev" %></span>
                  <%= f.submit t("headers.register"), class: "form-control btn btn-primary submit px-3 col-5 mx-auto" %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>