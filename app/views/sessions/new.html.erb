<!-- Page Content -->
<div class="page-heading products-heading header-text js-fullheight">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="text-content">
          <h4><%= t "headers.login"%></h4>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
          <%= form_for :session, url: login_path do |f| %>
            <div class="signin-form">
              <div class="form-group">
                <%= f.email_field :email, class: "form-control", placeholder: "#{t("login.username")}", required: true %>
              </div>
              <div class="form-group">
                <%= f.password_field :password, class: "form-control", placeholder: "#{t("login.passwd")}", required: true %>
                <span class="toggle-password" toggle="#session_password"><i class="eye-pic fa fa-fw fa-eye field-icon"></i></span>
              </div>
              <div class="form-group">
                <%= f.submit t("headers.login"), class: "form-control btn btn-primary submit px-3" %>
              </div>
              <div class="form-group d-md-flex">
                <div class="w-50">
                  <label class="checkbox-wrap checkbox-primary"><%= t "login.remember_me" %>
                    <%= f.check_box :remember_me %>
                    <span class="checkmark"></span>
                  </label>
                </div>
                <div class="w-50 text-md-right">
                  <%= link_to t("login.forgot_passwd"), new_password_reset_path, class:"text-white" %>
                </div>
              </div>
            </div>
          <% end %>
          <p class="w-100 text-center">&mdash; <%= t "login.or_with" %> &mdash;</p>
          <div class="social d-flex text-center">
            <a href="#" class="px-2 py-2 mr-md-1 rounded"><span class="fab fa-facebook mr-2"></span> Facebook</a>
            <a href="#" class="px-2 py-2 ml-md-1 rounded"><span class="fab fa-google mr-2"></span> Google</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>