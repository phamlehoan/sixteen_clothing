<!-- Page Content -->
<div class="page-heading products-heading header-text js-fullheight">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="text-content">
          <h4><%= t "headers.login"%></h4>
        </div>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-md-6 col-lg-4">
        <div class="login-wrap p-0">
          <%= form_for :password_reset, url: password_resets_path do |f| %>
            <div class="signin-form">
              <div class="form-group">
                <%= f.email_field :email, class: "form-control", placeholder: "#{t("login.username")}" %>
              </div>
              <div class="form-group">
                <%= f.submit t("login.btn_send_email"), class: "form-control btn btn-primary submit px-3" %>
              </div>
              <div class="form-group text-center ml-5">
                <i class="fas fa-long-arrow-alt-right ml-5"></i>
                <%= link_to t("menu_list.login"), login_path, class:"text-white" %>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>